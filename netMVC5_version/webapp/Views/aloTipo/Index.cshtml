@{
    ViewBag.Title = "Tipos";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-group"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("aloTipoGrid", "aloTipo")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createaloTipoGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("aloTipoGrid")
            .Mod(o => o.PageInfo().ColumnsSelector().ColumnsAutohide()).ColumnsPersistence(Persistence.Local)
            .Url(Url.Action("GridGetItems", "aloTipo"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
            new Column { Bind = "nombre" },
            new Column { Bind = "inicioTempAlta" },
            new Column { Bind = "finTempAlta" },
            new Column { Bind = "clase" },
            new Column { Bind = "croquis" },
            new Column { Bind = "idSede" },
                    new Column { Bind = "restricFDStempAlta", Width = 170 },
            new Column { ClientFormat = GridUtils.EditFormatForGrid("aloTipoGrid"), Width = 50 },
            new Column { ClientFormat = GridUtils.DeleteFormatForGrid("aloTipoGrid"), Width = 50 }))
</div>
@*end*@
