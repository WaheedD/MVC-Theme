@{
    ViewBag.Title = "Paradas";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-comments"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("appParadaGrid", "appParada")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createappParadaGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("appParadaGrid")
            .Mod(o => o.PageInfo().ColumnsSelector().ColumnsAutohide()).ColumnsPersistence(Persistence.Local)
                        .Url(Url.Action("GridGetItems", "appParada"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                            new Column { Bind = "nombre" },
                            new Column { Bind = "hora" },
                            new Column { Bind = "min" },
                            new Column { Bind = "estacion" },
                            new Column { Bind = "duracion" },
                            new Column { Bind = "esRetorno" },
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("appParadaGrid"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("appParadaGrid"), Width = 50 }))
</div>
@*end*@



