@{
    ViewBag.Title = "Zonas";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-paragraph"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("ZonasGrid", "aloZona")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createZonasGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("ZonasGrid")
            .Mod(o => o.PageInfo().ColumnsSelector())
                        .Url(Url.Action("GridGetItems", "aloZona"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
            new Column { Bind = "desc1" },
            new Column { Bind = "desc2" },
            new Column { Bind = "personas" },
            new Column { Bind = "croquis" },
            new Column { Bind = "precio" },
            new Column { Bind = "tipo" },
            new Column { ClientFormat = GridUtils.EditFormatForGrid("ZonasGrid"), Width = 50 },
            new Column { ClientFormat = GridUtils.DeleteFormatForGrid("ZonasGrid"), Width = 50 }))
</div>

@*end*@


