@{
    ViewBag.Title = "Excepciones";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-comments"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("ExcepcionesGrid", "aloExcepcione")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createExcepcionesGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("ExcepcionesGrid")
            .Mod(o => o.PageInfo().ColumnsSelector()).ColumnsPersistence(Persistence.Local)
                        .Url(Url.Action("GridGetItems", "aloExcepcione"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                new Column { Bind = "nombre" },
                new Column { Bind = "descripcion" },
                new Column { Bind = "desde" },
                new Column { Bind = "hasta" },
                new Column { Bind = "tipo" },
                new Column { Bind = "tipoExcep" },
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("ExcepcionesGrid"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("ExcepcionesGrid"), Width = 50 }))
</div>
@*end*@


