@model int

    <div class="row">
        <div class="col-md-12">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-paragraph"></i> Paradas</h1>
        </div>
    </div>

    @Html.InitCrudPopupsForGrid("appParadaGrid_Ruta", "appParada")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createappParadaGrid_Ruta', { params: { ruta_Id: '@(Model)' } })" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("appParadaGrid_Ruta")
            .Mod(o => o.PageInfo().ColumnsSelector().ColumnsAutohide()).ColumnsPersistence(Persistence.Local)
                .Url(Url.Action("GridGetItemsForRuta", "appParada"))
            .Parameter("ruta_Id", Model)
            .Parent("txtSearch", "search")
            //.Height(350)
            .Groupable(false)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
            new Column { Bind = "nombre" },
                    new Column { Bind = "hora" },
                    new Column { Bind = "min" },
                    new Column { Bind = "estacion" },
                    new Column { Bind = "ruta" },
                    new Column { Bind = "duracion" },
                    new Column { Bind = "esRetorno" },
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("appParadaGrid_Ruta"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("appParadaGrid_Ruta"), Width = 50 }))


<div class="modal-footer"><button aria-hidden="true" data-dismiss="modal" class="btn btn-default" type="button">Close</button></div>
