@{
    ViewBag.Title = "Buses";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-comments"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("appBusGrid", "appBus")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createappBusGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("appBusGrid")
            .Mod(o => o.PageInfo().ColumnsSelector().ColumnsAutohide()).ColumnsPersistence(Persistence.Local)
                        .Url(Url.Action("GridGetItems", "appBus"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                           new Column { Bind = "nombre" },
                            new Column { Bind = "descrip" },
                            new Column { Bind = "placa" },
                            new Column { Bind = "pasajeros" },
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("appBusGrid"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("appBusGrid"), Width = 50 }))
</div>
@*end*@
