@{
    ViewBag.Title = "Reservas";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-group"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("aloReservasGrid", "aloReserva")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createaloReservasGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("aloReservasGrid")
            .Mod(o => o.PageInfo().ColumnsSelector())
            .Url(Url.Action("GridGetItems", "aloReserva"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                new Column { Bind = "codigoReserva" },
                new Column { Bind = "fecha" },
                new Column { Bind = "fechaEntrada" },
                new Column { Bind = "fechaSalida" },
                new Column { Bind = "comentarios" },
                new Column { Bind = "DEUCON" },
                new Column { Bind = "DEUPRV" },
                new Column { Bind = "monto" },
                new Column { Bind = "IGV" },
                new Column { Bind = "total" },
                new Column { Bind = "confirmada" },
                new Column { Bind = "emision" },
                new Column { Bind = "alojamiento_Id" },
                new Column { Bind = "gestor_Id" },
                new Column { Bind = "socio_Id" },
                new Column { ClientFormat = GridUtils.EditFormatForGrid("aloReservasGrid"), Width = 50 },
                new Column { ClientFormat = GridUtils.DeleteFormatForGrid("aloReservasGrid"), Width = 50 }))
</div>
    @*end*@


