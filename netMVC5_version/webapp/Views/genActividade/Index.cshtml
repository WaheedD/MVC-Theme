@{
    ViewBag.Title = "Actividades";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-comments"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("genActividadeGrid", "genActividade")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('creategenActividadeGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("genActividadeGrid")
            .Mod(o => o.PageInfo().ColumnsSelector())
                        .Url(Url.Action("GridGetItems", "genActividade"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                    new Column { Bind = "desc"},
                    new Column { Bind = "detalle"},
                    new Column { Bind = "idSede"},
                    new Column { Bind = "lugar"},
                    new Column { Bind = "fecha"},
                    new Column { Bind = "refCosto"},
                    new Column { Bind = "foto"},
                    new Column { Bind = "tel"},
                    new Column { Bind = "mail"},
                    new Column { Bind = "ventaDesde"},
                    new Column { Bind = "ventaHasta"},
                    new Column { Bind = "blogPost"},
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("genActividadeGrid"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("genActividadeGrid"), Width = 50 }))
</div>
@*end*@


