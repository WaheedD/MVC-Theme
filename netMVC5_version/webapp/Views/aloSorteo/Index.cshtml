@{
    ViewBag.Title = "Sorteos";
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa fa-paragraph"></i> @ViewBag.Title <span>> @ViewBag.Title List</span></h1>
        </div>
    </div>

    @*begin*@
    @Html.InitCrudPopupsForGrid("SorteosGrid", "aloSorteo")

    <div class="bar">
        <div style="float: right;">
            @Html.Awe().TextBox("txtSearch").Placeholder("search...").CssClass("searchtxt")
        </div>
        <button type="button" onclick="awe.open('createSorteosGrid')" class="awe-btn mbtn">Create</button>
    </div>

    @(Html.Awe().Grid("SorteosGrid")
            .Mod(o => o.PageInfo().ColumnsSelector()).ColumnsPersistence(Persistence.Local)
                        .Url(Url.Action("GridGetItems", "aloSorteo"))
            .Parent("txtSearch", "search")
            //.Height(350)
            .Columns(
            new Column { Bind = "Id", Width = 80 },
                new Column { Bind = "detalle" },
                new Column { Bind = "fechaEntrada" },
                new Column { Bind = "fechaPago" },
                new Column { Bind = "estadia_desde" },
                new Column { Bind = "estadia_hasta" },
                new Column { Bind = "inscripcion_desde",Width=160 },
                        new Column { Bind = "inscripcion_hasta", Width = 160 },
                new Column { Bind = "tipo" },
                    new Column { ClientFormat = GridUtils.EditFormatForGrid("SorteosGrid"), Width = 50 },
                    new Column { ClientFormat = GridUtils.DeleteFormatForGrid("SorteosGrid"), Width = 50 }))
</div>

    @*end*@


